<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Owen's Portfolio</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio_Web_App.styles.css" asp-append-version="true" />

    <style>
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            padding: 15px 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.6rem;
            color: #27ae60 !important;
            letter-spacing: -0.5px;
            transition: transform 0.3s;
        }

            .navbar-brand:hover {
                transform: scale(1.02);
            }

        .navbar-nav .nav-item {
            margin-left: 15px;
        }

        .nav-link {
            color: #555 !important;
            font-weight: 600;
            font-size: 1rem;
            position: relative;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #27ae60 !important;
                transform: translateY(-2px);
            }

            .nav-link::after {
                content: '';
                display: block;
                width: 0;
                height: 3px;
                background: #27ae60;
                transition: width 0.3s;
                border-radius: 2px;
                margin-top: 4px;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        .navbar-toggler {
            border: none;
            outline: none;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden; 
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Owen's Portfolio
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav ms-auto mt-2">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid p-0">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>