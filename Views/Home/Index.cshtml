@{
    ViewData["Title"] = "Home Page";
}

<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* Global Page Reset for full width */
    .home-wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f6f5f7;
        width: 100%;
        overflow-x: hidden;
    }

    /* --- HERO SECTION --- */
    .hero-section {
        position: relative;
        height: 90vh; /* Takes up most of the screen */
        background: #27ae60;
        background: linear-gradient(135deg, #27ae60, #2ecc71);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 0 20px;
        overflow: hidden;
    }

        /* Decorative Shapes */
        .hero-section::before {
            content: "";
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            top: -100px;
            left: -100px;
        }

        .hero-section::after {
            content: "";
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            bottom: 50px;
            right: -50px;
        }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.1;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 40px;
        opacity: 0.9;
    }

    .hero-btns {
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn-hero {
        padding: 15px 40px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid white; /* Consistent border for all hero buttons */
        background: transparent; /* Transparent by default */
        color: white;
    }

        .btn-hero:hover {
            background: white; /* White on hover */
            color: #27ae60; /* Green text on hover */
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* --- NAVIGATION CARDS SECTION --- */
    .nav-cards-section {
        padding: 80px 5%;
        position: relative;
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

        .section-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .section-header p {
            color: #666;
            font-size: 1.1rem;
        }

    .cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .nav-card {
        background: white;
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        text-decoration: none;
        color: #333;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .nav-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(39, 174, 96, 0.15); /* Green tinted shadow */
        }

    .card-icon-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: #e8f8f5; /* Light green bg */
        color: #27ae60;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 25px;
        transition: 0.3s;
    }

    .nav-card:hover .card-icon-circle {
        background: #27ae60;
        color: white;
    }

    .nav-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .nav-card p {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 20px;
    }

    .card-link-text {
        margin-top: auto;
        font-weight: 700;
        color: #27ae60;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }


    /* --- EXPERTISE SECTION (New) --- */
    .expertise-section {
        background: white;
        padding: 100px 5%;
        text-align: center;
    }

    .expertise-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 40px;
        max-width: 1200px;
        margin: 50px auto 0;
    }

    .expertise-card {
        padding: 40px 30px;
        border-radius: 15px;
        transition: 0.3s;
        border: 1px solid transparent;
        background: #fff;
    }

        .expertise-card:hover {
            background: #f9fdfa; /* Very subtle green tint */
            border-color: #e8f8f5;
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

    .expertise-icon {
        font-size: 3rem;
        color: #27ae60;
        margin-bottom: 25px;
        display: inline-block;
    }

    .expertise-card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #333;
    }

    .expertise-card p {
        color: #666;
        line-height: 1.6;
        font-size: 1rem;
    }


    /* --- RESPONSIVE --- */
    @@media (max-width: 900px) {
        .hero-title {
            font-size: 3rem;
        }

        .hero-section {
            height: auto;
            padding: 100px 20px 150px;
        }
    }
</style>

<div class="home-wrapper">


    <div class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Hello, Thanks for Visiting my Page</h1>
            <p class="hero-subtitle">
                A showcase of everything about me, feel free to look around.
            </p>
            <div class="hero-btns">
                <a href="/Home/Projects" class="btn-hero">View Projects</a>
                <a href="/Home/Contact" class="btn-hero">Get in Touch</a>
            </div>
        </div>
    </div>

    <div class="nav-cards-section">
        <div class="section-header">
            <h2>Explore the Platform</h2>
            <p>Access different modules of the portfolio application.</p>
        </div>

        <div class="cards-grid">
            <a href="/Home/Projects" class="nav-card">
                <div class="card-icon-circle">
                    <i class="fas fa-layer-group"></i>
                </div>
                <h3>Projects</h3>
                <p>Browse through my collection of personal and professional projects.</p>
                <span class="card-link-text">Explore <i class="fas fa-arrow-right"></i></span>
            </a>

            <a href="/Home/About" class="nav-card">
                <div class="card-icon-circle">
                    <i class="fas fa-user-tie"></i>
                </div>
                <h3>About Me</h3>
                <p>Learn more about my background, technical skills, and professional journey.</p>
                <span class="card-link-text">Read More <i class="fas fa-arrow-right"></i></span>
            </a>

            <a href="/Home/Contact" class="nav-card">
                <div class="card-icon-circle">
                    <i class="fas fa-paper-plane"></i>
                </div>
                <h3>Contact</h3>
                <p>Have a question or proposal? Send a direct message to me anytime!</p>
                <span class="card-link-text">Connect <i class="fas fa-arrow-right"></i></span>
            </a>
        </div>
    </div>

    <div class="expertise-section">
        <div class="section-header">
            <h2>What I Bring to the Table</h2>
            <p>Combining technical proficiency with creative design solutions.</p>
        </div>

        <div class="expertise-grid">
            <div class="expertise-card">
                <i class="fas fa-code expertise-icon"></i>
                <h3>Web Development</h3>
                <p>Building responsive, high-performance web applications using ASP.NET Core, React, and modern JavaScript frameworks.</p>
            </div>
            <div class="expertise-card">
                <i class="fas fa-paint-brush expertise-icon"></i>
                <h3>UI/UX Design</h3>
                <p>Crafting intuitive and aesthetically pleasing user interfaces that prioritize user experience and accessibility.</p>
            </div>
            <div class="expertise-card">
                <i class="fas fa-server expertise-icon"></i>
                <h3>Backend Architecture</h3>
                <p>Designing robust server-side logic, efficient database schemas, and secure API integrations for scalable systems.</p>
            </div>
        </div>
    </div>

</div>