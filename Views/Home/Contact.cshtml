@{
    ViewData["Title"] = "Contact";
}

<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* Global Wrapper - Allows scrolling */
    .contact-wrapper {
        background-color: #fbfbfb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: calc(100vh - 60px);
        padding-bottom: 80px;
        width: 100%;
    }

    /* 1. HERO BANNER SECTION */
    .contact-hero {
        background: #27ae60;
        background: linear-gradient(135deg, #27ae60, #2ecc71);
        color: white;
        text-align: center;
        /* Large bottom padding allows the cards to overlap later */
        padding: 80px 20px 140px;
        position: relative;
        overflow: hidden;
    }

        /* Decorative Circles (Consistent Theme) */
        .contact-hero::before {
            content: "";
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
            top: -50px;
            left: -50px;
        }

        .contact-hero::after {
            content: "";
            position: absolute;
            width: 250px;
            height: 250px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
            bottom: 20px;
            right: 10%;
        }

        .contact-hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 15px;
            position: relative;
            z-index: 2;
        }

        .contact-hero p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

    /* 2. FLOATING INFO CARDS */
    .info-cards-container {
        max-width: 1100px;
        /* Negative top margin pulls the grid UP into the green header */
        margin: -80px auto 60px;
        padding: 0 20px;
        position: relative;
        z-index: 10;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .info-card {
        background: white;
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(39, 174, 96, 0.1);
        }

    /* Icon Styling */
    .icon-box {
        width: 70px;
        height: 70px;
        background: #e8f8f5; /* Light green tint */
        color: #27ae60;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin: 0 auto 20px;
        transition: 0.3s;
    }

    .info-card:hover .icon-box {
        background: #27ae60;
        color: white;
    }

    .info-card h3 {
        font-size: 1.3rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .info-card p {
        color: #666;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 0;
    }

    /* 3. CENTERED FORM SECTION */
    .form-section {
        max-width: 900px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        padding: 60px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.03);
    }

    .form-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .form-header h2 {
            font-size: 2.2rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
        }

        .form-header p {
            color: #888;
        }

    .contact-form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .form-group {
        position: relative;
    }

    .full-width {
        grid-column: span 2;
    }

    /* Input Styling matching other pages but adapted for white bg */
    .form-control-styled {
        width: 100%;
        background: #f8f9fa;
        border: 1px solid transparent;
        border-radius: 8px; /* Slightly softer corners */
        padding: 15px 20px;
        font-size: 1rem;
        outline: none;
        transition: 0.3s;
        font-family: inherit;
        color: #333;
    }

        .form-control-styled:focus {
            background: white;
            border-color: #27ae60;
            box-shadow: 0 0 0 4px rgba(39, 174, 96, 0.1);
        }

        .form-control-styled::placeholder {
            color: #aaa;
        }

    textarea.form-control-styled {
        resize: vertical;
        min-height: 150px;
    }

    /* Submit Button */
    .btn-send {
        background: #27ae60;
        color: white;
        border: none;
        padding: 15px 50px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        justify-self: center;
        grid-column: span 2; /* Centers button in grid */
        margin-top: 20px;
    }

        .btn-send:hover {
            background: #219150;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(39, 174, 96, 0.2);
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .contact-form {
            grid-template-columns: 1fr;
        }

        .full-width {
            grid-column: span 1;
        }

        .btn-send {
            grid-column: span 1;
            width: 100%;
        }

        .form-section {
            padding: 40px 20px;
            margin: 0 20px;
        }

        .contact-hero {
            padding: 60px 20px 100px;
        }

        .info-cards-container {
            margin-top: -60px;
        }
    }
</style>

<div class="contact-wrapper">

    <div class="contact-hero">
        <h1>Contact Me</h1>
        <p>I would love to hear from you, send me a message!</p>
    </div>

    <div class="info-cards-container">
        <div class="info-card">
            <div class="icon-box">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3>Where Im From</h3>
            <p>Northwest Calgary<br>Alberta, Canada</p>
        </div>

        <div class="info-card">
            <div class="icon-box">
                <i class="fas fa-phone-alt"></i>
            </div>
            <h3>Call Me</h3>
            <p>Anytime during the day at<br><strong>+1 (250)-253 0061</strong></p>
        </div>

        <div class="info-card">
            <div class="icon-box">
                <i class="fas fa-envelope"></i>
            </div>
            <h3>Email Me</h3>
            <p>Reach out to me anytime at<br><strong>ohilt06@gmail.com</strong></p>
        </div>
    </div>

    <div class="form-section">
        <div class="form-header">
            <h2>Send a Message</h2>
            <p>Fill out the form below and I will get back to you via email shortly.</p>
        </div>

        <form class="contact-form">
            <div class="form-group">
                <input type="text" class="form-control-styled" placeholder="First Name" required />
            </div>
            <div class="form-group">
                <input type="text" class="form-control-styled" placeholder="Last Name" required />
            </div>
            <div class="form-group">
                <input type="email" class="form-control-styled" placeholder="Email Address" required />
            </div>
            <div class="form-group">
                <input type="tel" class="form-control-styled" placeholder="Phone Number" />
            </div>
            <div class="form-group full-width">
                <input type="text" class="form-control-styled" placeholder="Subject" />
            </div>
            <div class="form-group full-width">
                <textarea class="form-control-styled" placeholder="How can I help you?"></textarea>
            </div>

            <button type="submit" class="btn-send">Send Message</button>
        </form>
    </div>

</div>