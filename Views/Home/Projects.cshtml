<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .projects-full-screen {
        display: flex;
        width: 100%;
        height: calc(100vh - 60px);
        background-color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }

    .projects-info-panel {
        width: 35%;
        background: #27ae60;
        background: linear-gradient(to bottom right, #27ae60, #2ecc71);
        color: white;
        padding: 60px 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        z-index: 2;
        box-shadow: 5px 0 15px rgba(0,0,0,0.1);
    }

        .projects-info-panel::before {
            content: "";
            position: absolute;
            width: 250px;
            height: 250px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            top: -50px;
            left: -50px;
            z-index: -1;
        }

        .projects-info-panel::after {
            content: "";
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            bottom: -80px;
            right: -80px;
            z-index: -1;
        }

    .projects-header h2 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .projects-header p {
        font-size: 1.2rem;
        line-height: 1.6;
        opacity: 0.9;
        margin-bottom: 40px;
    }

    .filter-btn {
        background: transparent;
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        padding: 12px 25px;
        border-radius: 50px;
        margin-bottom: 15px;
        cursor: pointer;
        text-align: left;
        font-size: 1.1rem;
        transition: 0.3s;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 300px;
    }

        .filter-btn:hover, .filter-btn.active {
            background: white;
            color: #27ae60;
            border-color: white;
            padding-left: 35px;
        }

        .filter-btn i {
            opacity: 0;
            transition: 0.3s;
        }

        .filter-btn:hover i, .filter-btn.active i {
            opacity: 1;
        }

    .projects-content-panel {
        width: 65%;
        background-color: #f9f9f9;
        position: relative;
        overflow: hidden;
    }

    .projects-grid-view {
        width: 100%;
        height: 100%;
        overflow-y: auto;
        padding: 50px;
        transition: opacity 0.4s ease, transform 0.4s ease;
    }

        .projects-grid-view.hidden {
            opacity: 0;
            pointer-events: none;
            transform: scale(0.95);
            display: none; 
        }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 30px;
        padding-bottom: 50px;
    }

    .project-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        height: 100%;
        opacity: 1;
        transform: scale(1);
    }

        .project-card.filtered-out {
            display: none;
        }

        .project-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

    .card-img-wrapper {
        height: 180px;
        overflow: hidden;
        position: relative;
    }

    .card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .project-card:hover .card-img {
        transform: scale(1.05);
    }

    .card-content {
        padding: 20px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .card-category {
        color: #27ae60;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 8px;
        color: #333;
    }

    .card-desc {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 15px;
    }

    .card-footer {
        margin-top: auto;
        display: flex;
        justify-content: flex-end;
    }

    .card-icon {
        width: 35px;
        height: 35px;
        background-color: #f0f0f0;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #333;
        transition: 0.3s;
    }

    .project-card:hover .card-icon {
        background-color: #27ae60;
        color: white;
    }

    .project-detail-view {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: white;
        z-index: 10;
        display: none; 
        flex-direction: column;
        overflow-y: auto;
        opacity: 0;
        transition: opacity 0.4s ease;
        padding: 40px 60px;
    }

        .project-detail-view.active {
            display: flex;
            opacity: 1;
        }

    .btn-back {
        align-self: flex-start;
        background: transparent;
        border: none;
        color: #666;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
        transition: 0.3s;
        padding: 0;
    }

        .btn-back:hover {
            color: #27ae60;
            transform: translateX(-5px);
        }

    .detail-header-img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .detail-content h1 {
        font-size: 2.5rem;
        font-weight: 800;
        color: #333;
        margin-bottom: 10px;
    }

    .detail-meta {
        display: inline-block;
        background: #e8f8f5;
        color: #27ae60;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 25px;
        text-transform: uppercase;
    }

    .detail-description {
        font-size: 1.1rem;
        color: #555;
        line-height: 1.8;
        max-width: 800px;
        margin-bottom: 40px;
    }

    .btn-github {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background-color: #333;
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

        .btn-github:hover {
            background-color: #000;
            transform: translateY(-2px);
            color: white;
        }

    .projects-grid-view::-webkit-scrollbar, .project-detail-view::-webkit-scrollbar {
        width: 8px;
    }

    .projects-grid-view::-webkit-scrollbar-track, .project-detail-view::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .projects-grid-view::-webkit-scrollbar-thumb, .project-detail-view::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 4px;
    }

        .projects-grid-view::-webkit-scrollbar-thumb:hover, .project-detail-view::-webkit-scrollbar-thumb:hover {
            background: #27ae60;
        }

    @@media (max-width: 991px) {
        .projects-full-screen {
            flex-direction: column;
            height: auto;
            overflow: visible;
        }

        .projects-info-panel, .projects-content-panel {
            width: 100%;
        }
        .projects-content-panel {
            overflow: visible;
            height: auto;
        }

        .projects-info-panel {
            padding: 40px 20px;
        }

        .projects-grid-view, .project-detail-view {
            padding: 30px 20px;
            height: auto;
            min-height: 500px;
        }
        .project-detail-view {
            position: relative;
            opacity: 0;
            display: none;
        }

            .project-detail-view.active {
                display: flex;
                opacity: 1;
            }

        .detail-header-img {
            height: 200px;
        }
    }
</style>

<div class="projects-full-screen">

    <div class="projects-info-panel">
        <div class="projects-header">
            <h2>My Works</h2>
            <p>
                A list of all of my personal and professional projects to date. Click on each for more information.
            </p>
        </div>

        <div class="projects-filters">
            <button class="filter-btn active" onclick="filterProjects('all', this)">
                <span>All Projects</span>
                <i class="fas fa-chevron-right"></i>
            </button>
            <button class="filter-btn" onclick="filterProjects('Web Applications', this)">
                <span>Web Applications</span>
                <i class="fas fa-chevron-right"></i>
            </button>
            <button class="filter-btn" onclick="filterProjects('Native Applications', this)">
                <span>Native Applications</span>
                <i class="fas fa-chevron-right"></i>
            </button>
            <button class="filter-btn" onclick="filterProjects('Other Projects', this)">
                <span>Other Projects</span>
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>

    <div class="projects-content-panel">

        <div id="projectsGrid" class="projects-grid-view">
            <div class="projects-grid">
                @foreach (var item in projects)
                {
                    <div class="project-card" data-category="@item.Category" onclick="openProject(@item.Id)">
                        <div class="card-img-wrapper">
                            <img src="@item.Image" alt="@item.Title" class="card-img" />
                        </div>
                        <div class="card-content">
                            <span class="card-category">@item.Category</span>
                            <h3 class="card-title">@item.Title</h3>
                            <p class="card-desc">@item.Desc</p>
                            <div class="card-footer">
                                <div class="card-icon">
                                    <i class="fas fa-arrow-right"></i>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="p-title-@item.Id" value="@item.Title" />
                        <input type="hidden" id="p-cat-@item.Id" value="@item.Category" />
                        <input type="hidden" id="p-img-@item.Id" value="@item.Image" />
                        <input type="hidden" id="p-desc-@item.Id" value="@item.LongDesc" />
                        <input type="hidden" id="p-link-@item.Id" value="@item.GitHub" />
                    </div>
                }
            </div>
        </div>

        <div id="projectDetail" class="project-detail-view">
            <button class="btn-back" onclick="closeProject()">
                <i class="fas fa-arrow-left"></i> Back to Projects
            </button>

            <div class="detail-container">
                <img id="detailImg" src="" class="detail-header-img" />
                <div class="detail-content">
                    <span id="detailCat" class="detail-meta">Category</span>
                    <h1 id="detailTitle">Project Title</h1>
                    <p id="detailDesc" class="detail-description">Description goes here...</p>

                    <a id="detailLink" href="#" target="_blank" class="btn-github">
                        <i class="fab fa-github"></i> View on GitHub
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function filterProjects(category, btnElement) {
        document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
        btnElement.classList.add('active');

        const cards = document.querySelectorAll('.project-card');

        cards.forEach(card => {
            const cardCat = card.getAttribute('data-category');

            if (category === 'all') {
                card.classList.remove('filtered-out');
            } else {
                if (cardCat === category) {
                    card.classList.remove('filtered-out');
                } else {
                    card.classList.add('filtered-out');
                }
            }
        });

        closeProject();
    }

    function openProject(id) {
        const title = document.getElementById(`p-title-${id}`).value;
        const cat = document.getElementById(`p-cat-${id}`).value;
        const img = document.getElementById(`p-img-${id}`).value;
        const desc = document.getElementById(`p-desc-${id}`).value;
        const link = document.getElementById(`p-link-${id}`).value;

        document.getElementById('detailTitle').innerText = title;
        document.getElementById('detailCat').innerText = cat;
        document.getElementById('detailImg').src = img;
        document.getElementById('detailDesc').innerText = desc;
        document.getElementById('detailLink').href = link;

        const gridView = document.getElementById('projectsGrid');
        const detailView = document.getElementById('projectDetail');

        gridView.classList.add('hidden');
        setTimeout(() => {
            gridView.style.display = 'none'; 
            detailView.classList.add('active');

            if (window.innerWidth <= 991) {
                 const contentPanel = document.querySelector('.projects-content-panel');
                 if(contentPanel) contentPanel.scrollIntoView({behavior: 'smooth'});
            }
        }, 300); 
    }

    function closeProject() {
        const gridView = document.getElementById('projectsGrid');
        const detailView = document.getElementById('projectDetail');

        detailView.classList.remove('active');

        setTimeout(() => {
            gridView.style.display = 'block';

            setTimeout(() => {
                gridView.classList.remove('hidden');
            }, 10);
        }, 300);
    }
</script>