@{
    ViewData["Title"] = "About Me";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .about-wrapper {
        background-color: #fbfbfb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: calc(100vh - 60px);
        padding-bottom: 80px;
        width: 100%;
        overflow-x: hidden;
    }

    .about-hero {
        background: #27ae60;
        background: linear-gradient(135deg, #27ae60, #2ecc71);
        color: white;
        text-align: center;
        padding: 80px 20px 140px; 
        position: relative;
        overflow: hidden;
    }


        .about-hero::before {
            content: "";
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
            top: -100px;
            left: -100px;
        }

        .about-hero::after {
            content: "";
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
            bottom: 50px;
            right: -50px;
        }

    .profile-img-container {
        width: 150px;
        height: 150px;
        margin: 0 auto 20px;
        border-radius: 50%;
        border: 5px solid rgba(255,255,255,0.3);
        overflow: hidden;
        position: relative;
        z-index: 2;
        background: white;
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .about-hero h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 10px;
        position: relative;
        z-index: 2;
    }

    .about-hero .subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        font-weight: 300;
        margin-bottom: 0;
        position: relative;
        z-index: 2;
    }

    .about-content-container {
        max-width: 1000px;
        margin: -80px auto 0;
        padding: 0 20px;
        position: relative;
        z-index: 10;
    }

    .skills-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        margin-bottom: 40px;
        text-align: center;
    }

        .skills-section h2 {
            font-size: 1.8rem;
            color: #333;
            margin-bottom: 30px;
            font-weight: 700;
        }

    .skills-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
    }

    .skill-tag {
        background: #f0fdf4;
        color: #27ae60;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.95rem;
        border: 1px solid #dcfce7;
        transition: 0.3s;
    }

        .skill-tag:hover {
            background: #27ae60;
            color: white;
            transform: translateY(-2px);
        }


    .timeline-section {
        background: white;
        border-radius: 20px;
        padding: 60px 40px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
    }

    .timeline-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .timeline-header h2 {
            font-size: 2rem;
            color: #333;
            font-weight: 700;
        }

    .timeline {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

        .timeline::after {
            content: '';
            position: absolute;
            width: 2px;
            background-color: #e9ecef;
            top: 0;
            bottom: 0;
            left: 50%;
            margin-left: -1px;
        }

    .timeline-item {
        padding: 10px 40px;
        position: relative;
        background-color: inherit;
        width: 50%;
    }


    .left {
        left: 0;
        text-align: right;
    }

    .right {
        left: 50%;
        text-align: left;
    }


    .timeline-item::after {
        content: '';
        position: absolute;
        width: 20px;
        height: 20px;
        right: -10px;
        background-color: white;
        border: 4px solid #27ae60;
        top: 15px;
        border-radius: 50%;
        z-index: 1;
    }


    .right::after {
        left: -10px;
    }

    .content {
        padding: 20px 30px;
        background-color: #f8f9fa;
        position: relative;
        border-radius: 10px;
        transition: 0.3s;
    }

        .content:hover {
            background-color: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .content h3 {
            color: #27ae60;
            font-size: 1.2rem;
            margin-bottom: 5px;
            font-weight: 700;
        }

        .content .year {
            display: block;
            font-size: 0.85rem;
            color: #999;
            font-weight: 600;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .content p {
            margin: 0;
            color: #555;
            font-size: 0.95rem;
            line-height: 1.5;
        }


    @@media (max-width: 768px) {
        .timeline::after {
            left: 31px;
        }

        .timeline-item {
            width: 100%;
            padding-left: 70px;
            padding-right: 25px;
        }

        .left, .right {
            left: 0;
            text-align: left;
        }

        .timeline-item::after {
            left: 21px;
        }

        .right::after {
            left: 21px;
        }
    }
</style>

<div class="about-wrapper">

    <div class="about-hero">
        <div class="profile-img-container">
            <img src="/img/profile-photo.jpg" alt="Profile Photo" class="profile-img" />
        </div>
        <h1>Hi, I'm Owen</h1>
